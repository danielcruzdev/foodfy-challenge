{% extends "layout.njk" %}

{% block content %}

<main>
    <div class="detail-header">
        <div class="detail-image-container">
            <img src="{{receita.image}}" class="detail-image-container" />
        </div>
        <div class="detail-info-container">
            <h2>{{receita.title}}</h2>
            <p>por {{receita.author}}</p>
        </div>
    </div>
    <div class="details-recipe">
        <div class="details-info">
            <div class="title-button-ingredients detail-title-button">
                <h2>Ingredientes</h2>
                <a>MOSTRAR</a>
            </div>
            <div class="detail-list">
                <ul>
                    {% for ingredient in receita.ingredients %}
                    <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="details-info">
            <div class="title-button-preparation detail-title-button">
                <h2>Modo de preparo</h2>
                <a>MOSTRAR</a>
            </div>
            <div class="detail-list">
                <ul>
                    {% for step in receita.preparation %}
                    <li>{{step}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="details-info">
            <div class="title-button-information detail-title-button">
                <h2>Informações adicionais</h2>
                <a>MOSTRAR</a>
            </div>
        </div>
        <div class="detail-information">
            <p>{{ receita.information }}</p>
        </div>
    </div>
</main>

{% endblock %}