{% extends "layoutAdmin.njk" %}

{% block content %}

  <div class="card-form">
    <section class="details">
      <form method="POST" action="/admin/recipes?_method=PUT" enctype="multipart/form-data">
        <h3>Editar: {{ recipe.title }}</h3>

        {% include 'admin/recipes/fieldsEdit.njk' %}

        <input type="hidden" name="id" value="{{ recipe.id }}"/>
        <button id="button-save" type="submit">Salvar</button>
      </form>

      <form id='form-delete' action="/admin/recipes?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{ recipe.id }}"/>
        <button id='button-delete' type="submit">Deletar</button>
      </form>

      {% include 'confirm.njk' %}
    </section>
  </div>


{% endblock content %}