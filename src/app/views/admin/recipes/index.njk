{% extends "layoutAdmin.njk" %}

{% block content %}

<section class="manager-recipes">
    <div class="detail-text-container index">
        <h3>Gerenciar receitas</h3>
        <div class="button-edit index">
            <a href="/admin/recipe/create">Nova receita</a>
        </div>    
    </div>
    <section class="cards">
        {% for recipe in recipes %}
        <div class="card">
            <div class="image-container">
                <img src="{{ recipe.images[0].src }}" alt="{{recipe.title}}"/>
            </div>
            <div class="infos">
                <h2>{{ recipe.title }}</h2>
                <p>{{ recipe.chef_name }}</p>
                <a href="/admin/recipe/{{ recipe.id }}/">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </section>
</section>


<div class="pagination" 
    data-page={{pagination.page}} 
    data-total={{pagination.total}} 
    data-filter={{filter}}>
</div>

{% endblock %}