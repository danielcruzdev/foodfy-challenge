<div class="item">
    <div>Nome do chef</div>
    <div>
        <input type="text" name="name" placeholder="Primeiro e Ãºltimo nome" value="{{ chef.name }}"/>
        <input type="hidden" value="{{ chef.total_recipes }}" />
    </div>
</div>

<div class="item">
    <div>Foto do Chef</div>
    <div class="container-photos">
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file" 
                name="photo" 
                accpet="image/*"
                onchange="PhotosUpload.handleFileInput(event, 1)"
            >
            <p>+</p>
        </div>
        <div id="photos-preview">
            {% if photo %}
                    <div class="photo" id="{{photo.id}}">
                        <img src="{{photo.src}}" alt="{{photo.name}}">
                        <i 
                            class="material-icons"
                            onclick="PhotosUpload.removeOldPhoto(event)"
                        >delete</i>
                    </div>
                <input type="hidden" name="removed_files"/>
            {% endif %}
        </div>
    </div>
</div>

