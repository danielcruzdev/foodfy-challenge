{% extends "layoutAdmin.njk" %}

{% block content %}

<main class="main-recipes">
    <div class="detail-header-chefs">
        <div class="detail-text-container">
            <h3>Chef: {{chef.name}}</h3>
            <div class="button-edit index edit">
                <a href="/admin/chefs/{{ chef.id }}/edit">Editar</a>
            </div>    
        </div>
        <div class="chef-details-container">
            <div class="chef-avatar">
                <img src="{{chef.photo}}" alt="{{chef.name}}">
            </div>
            <div class="chef-details-profile">
                <h3>{{chef.name}}</h3>
                <p>{{chef.total_recipes}} 
                    {% if chef.total_recipes < 2 %} 
                        receita 
                    {% else %}
                        receitas
                    {% endif %}              
                </p>
            </div>
        </div>
        <section class="cards-recipes-chefs">
            {% for recipe in recipes %}
            <div class="card-recipe">
                <div class="image-recipe-container">
                    <img src="{{ recipe.images[0].src }}" alt="{{recipe.title}}"/>
                </div>
                <div class="infos-recipe-container">
                    <h2>{{ recipe.title }}</h2>
                    <p>por {{chef.name}} </p>
                    <a href="/admin/recipe/{{ recipe.id }}/">Visualizar</a>
                </div>
            </div>
            {% endfor %}
        </section>
    </div>
</main>
{% endblock %}