{% extends "layoutMain.njk" %} 

{% block head %}
<title>Receitas - Foodfy</title>
{% endblock head %} 

{% block filter %}
<div class="filter">
  <form action="/receitas" method="GET">
    <input
      type="text"
      name="filter"
      placeholder="Buscar uma receita"
      value={{ filter }}>
    <button type="submit">Buscar</button>
  </form>
</div>
{% endblock %} 

{% block content %}

<section class="most-accessed">
  <div class="recipes-cards">
    {% for recipe in recipes %}
    <div class="recipe-card" id="{{ recipe.id }}">
      <div class="image-container">
        <img src="{{ recipe.images[0].src }}" alt="{{ recipe.title }}" />
      </div>
      <div class="content">
        <h2>{{ recipe.title }}</h2>
        <p>{{ recipe.chef_name }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<div class="pagination" 
    data-page={{pagination.page}} 
    data-total={{pagination.total}} 
    data-filter={{filter}}>
</div>
{% endblock content %}
