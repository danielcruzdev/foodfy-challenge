{% extends "layoutMain.njk" %} {% block content %}

<main>
    <div class="detail-header">
        <div class="gallery">
            <div class="highlight">
                <img src="{{ recipe.images[0].src }}" alt="{{ recipe.images[0].name }}" onclick="Lightbox.open()" />

                <!-- <div class="lightbox-target">
                    <img src="{{ recipe.images[0].src }}" alt="{{ recipe.images[0].name }}" />
                    <a href="#" class="lightbox-close" onclick="Lightbox.close()">
                        <i class="material-icons">close</i>
                    </a>
                </div> -->
            </div>
            <div class="gallery-preview">
                {% for image in recipe.images %} 
                    <img src="{{ image.src }}" alt="{{ image.name }}" 
                    {% if loop.index0 == 0 %} class="active" {% endif %} 
                    onclick="ImageGallery.setImage(event)"> 
                {% endfor %}
            </div>
        </div>
        <div class="detail-info-container">
            <h2>{{ recipe.title }}</h2>
            <p>por {{ recipe.chef_name }}</p>
        </div>
    </div>
    <div class="details-recipe">
        <div class="details-info">
            <div class="title-button-ingredients detail-title-button">
                <h2>Ingredientes</h2>
                <a>ESCONDER</a>
            </div>
            <div class="detail-content">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                    <li>{{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="details-info">
            <div class="title-button-preparation detail-title-button">
                <h2>Modo de preparo</h2>
                <a>ESCONDER</a>
            </div>
            <div class="detail-content">
                <ol>
                    {% for step in recipe.preparation %}
                    <li>{{ step }}</li>
                    {% endfor %}
                </ol>
            </div>
        </div>
        <div class="details-info">
            <div class="title-button-information detail-title-button">
                <h2>Informações adicionais</h2>
                <a>ESCONDER</a>
            </div>
            <div class="detail-content">
                <p>{{ recipe.information }}</p>
            </div>
        </div>
    </div>
</main>

<script src="/scripts.js"></script>

{% endblock %}